@model UserDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    
}


<h1>Create User </h1>
<form class="pt-3" method="post" asp-controller="User" asp-action="Create">
    <div style="font-size:large; color:red" asp-validation-summary="All"></div>

   
    <input asp-for="@Model.Id" value="@Guid.NewGuid().ToString()" hidden/>


    <div class="form-group">
        <Lable>Display Name</Lable>
        <input asp-for="@Model.DisplayName" class="form-control form-control-lg" id="exampleInputEmail1">
        <span asp-validation-for="@Model.DisplayName"></span>

    </div>


    <div class="form-group">
        <Lable>Email</Lable>
        <input asp-for="@Model.Email" class="form-control form-control-lg" id="exampleInputPassword1">
        <span asp-validation-for="@Model.Email"></span>
    </div>


    <div class="form-group">
        <Lable>Password</Lable>
        <input asp-for="@Model.Password" class="form-control form-control-lg" id="exampleInputPassword1" type="password">
        <span asp-validation-for="@Model.Password"></span>
    </div>



    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
    </div>
</form>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}
