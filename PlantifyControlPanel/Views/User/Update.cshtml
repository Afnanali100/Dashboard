@model UserDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Update User </h1>
<form class="pt-3" method="post" asp-controller="User" asp-action="Update">
   

   
    <div class="form-group">
        <Lable>DisplayName</Lable>
        <input asp-for="@Model.DisplayName" class="form-control form-control-lg" id="exampleInputEmail1" >
        <span asp-validation-for="@Model.DisplayName"></span>

    </div>


    <div class="form-group">
        <Lable>Email</Lable>
        <input asp-for="@Model.Email" class="form-control form-control-lg" id="exampleInputPassword1" >
        <span asp-validation-for="@Model.Email"></span>
    </div>

    <div class="form-group">
        <label>Role</label>
        <input asp-for="@Model.Role" class="form-control form-control-lg" id="exampleInputPassword1" readonly>
        <span asp-validation-for="@Model.Role"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Update" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
    </div>
</form>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}


