@model SendEmails
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";

}


<h1>Send Email </h1>
<form class="pt-3" method="post" asp-controller="Admin" asp-action="SendEmail">
    <div style="font-size:large; color:red" asp-validation-summary="All"></div>


   


    <div class="form-group">
        <Lable>User Email</Lable>
        <input asp-for="@Model.UserEmail" class="form-control form-control-lg" id="exampleInputEmail1">
        <span asp-validation-for="@Model.UserEmail"></span>

    </div>


    <div class="form-group">
        <Lable>Subject</Lable>
        <input asp-for="@Model.Subject" class="form-control form-control-lg" id="exampleInputPassword1">
        <span asp-validation-for="@Model.Subject"></span>
    </div>


    <div class="form-group">
        <Lable>Body</Lable>
        <textarea style="height:60px; width:400px "  asp-for="@Model.Body" class="form-control form-control-lg" id="exampleInputPassword1" >

            </textarea>
        <span asp-validation-for="@Model.Body"></span>
    </div>



    <div class="mt-3">
        <input type="submit" value="SendEmail" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
    </div>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}
