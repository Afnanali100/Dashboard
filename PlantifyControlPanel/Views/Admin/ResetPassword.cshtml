@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Reset Password</h1>

<div class="agileits-top">
	<form asp-action="ResetPassword" method="post">
		<div>
		<input class="form-control form-control-lg" id="exampleInputPassword1" type="password" asp-for="@Model.NewPassword" placeholder="Password" required="">
		</div>
		<br />

		<input class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" value="Reset">
	</form>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
	}
